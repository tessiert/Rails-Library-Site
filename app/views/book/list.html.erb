<ul id = "subjects">
   <% @subjects.each do |subject| %>
   <li><%= link_to subject.name, :action => "show_books_by_subject", 
        :id => subject.id %></li>
   <% end %>
</ul>

<% if @books.blank? %>
    <p>There are currently zero books in the system.</p>
<% else %>
    <p>These are the current books in our system:</p>

    <ul id = "books">
        <% @books.each do |book| %>
            <li>
                <%= link_to book.title, {:action => 'show', :id => book.id} -%>
                <b><%= link_to 'Edit', {:action => "edit", :id => book.id} %></b>
                <b><%= link_to "Delete", {:action => 'delete', :id => book.id},
                    data: {confirm: "Are you sure you want to delete this item?"} %></b>
            </li>
        <% end %>
    </ul>
<% end %>

<p><%= link_to "Add New Book", {:action => 'new'} %></p>